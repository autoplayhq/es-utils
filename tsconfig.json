{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "exactOptionalPropertyTypes": true,
    "rootDir": "src",
    "outDir": "esm"
  },
  "references": [],
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
